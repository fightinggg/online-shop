<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.onlineshop.dao.OrderDao">
    <resultMap id="BaseResultMap" type="com.example.onlineshop.entity.Order">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="buyerId" jdbcType="INTEGER" property="buyerid"/>
        <result column="goodsId" jdbcType="INTEGER" property="goodsid"/>
        <result column="addressid" jdbcType="INTEGER" property="addressid"/>
        <result column="counts" jdbcType="INTEGER" property="counts"/>
        <result column="state" jdbcType="CHAR" property="state"/>
    </resultMap>

    <select id="selectByBuyerId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select * from `order` where buyerId = #{id}
    </select>

    <select id="selectBySellerId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select * from `order` as o,goods as g where o.goodsId=g.id and g.sellerId = #{id}
    </select>
</mapper>