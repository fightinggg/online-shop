<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="testTables" targetRuntime="MyBatis3">
        <jdbcConnection
                driverClass="com.mysql.cj.jdbc.Driver"
                connectionURL="jdbc:mysql://localhost:3306/shop?useUnicode=true&amp;characterEncoding=UTF-8&amp;useSSL=false"
                userId="root"
                password="123456"
        ></jdbcConnection>
        <javaModelGenerator targetPackage="com.shop.buyer.entity"
                            targetProject="./buyer/src/main/java"></javaModelGenerator>
        <sqlMapGenerator targetPackage="com.shop.buyer.mapper"
                         targetProject="./buyer/src/main/java"></sqlMapGenerator>
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.shop.buyer.mapper"
                             targetProject="./buyer/src/main/java"></javaClientGenerator>
        <table tableName="buyer"></table>
        <table tableName="buyerMoney"></table>
    </context>
</generatorConfiguration>